<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cvs_avatar"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_face_black_24dp"
            app:riv_border_color="#333333"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="clamp" />


        <TextView
            android:id="@+id/conversation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/cvs_avatar"
            android:maxLength="14"
            android:maxLines="1"
            android:text="Hang Nguyen"
            android:textColor="@color/colorBlack"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/last_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_name"
            android:layout_alignStart="@+id/conversation_name"
            android:layout_alignRight="@id/cvs_avatar"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="-173dp"
            android:maxLength="15"
            android:maxLines="1"
            android:text="skjhsdsdsdfsdfdhi"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/last_message_time"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="261dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="33dp"
            android:maxLength="17"
            android:maxLines="2"
            android:text="15/01/2018 12h20"
            android:textAlignment="textEnd" />
    </RelativeLayout>


</RelativeLayout>