<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.SettingsFragment$MainActivity">


        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tab_layout"
            android:layout_below="@id/search_bar"
            android:layout_marginBottom="0dp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            style="@style/MyTabLayoutTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@color/quite_while"
            android:outlineAmbientShadowColor="@color/quite_while"
            app:tabGravity="fill"
            app:tabRippleColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/tabselect"></android.support.design.widget.TabLayout>
    </RelativeLayout>
</FrameLayout>